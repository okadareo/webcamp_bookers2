<div class="container">
    <div class="row">
    <%# ↓ INSERT LEFT CONTENTS %>
    <%= render 'users/left_contents', book_new: @book_new, user: @user%>
    <%# ↑ INSERT LEFT CONTENTS END %>
    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle attachment user profile_image", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
</div>
</div>
