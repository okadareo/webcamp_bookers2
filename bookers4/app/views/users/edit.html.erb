<h2>User info</h2>
<%# USER VALIDATION %>
<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
  <h2><%= @user.errors.count %> errors prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%#  %>
<%= form_for(@user) do |f| %>
  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus: true, class:"name", placeholder:"name"%>
  </div>
  <div class="field">
    <label for="user_image">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "Profile Image", class: "user-edit-form" %>
  </div>
  <div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction, class:"user_body introduction", id:"user_introduction" %>
  </div>
  <div class="actions">
    <%= f.submit "Update User", class:"btn btn-primary" %>
  </div>
<% end %>
